{
  "name": "bsc-js-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:a11y": "jest --testMatch='**/*.a11y.{js,ts,jsx,tsx}'",
    "generate-jwt-secret": "node scripts/generate-jwt-secret.js",
    "generate-otp-secret": "node scripts/generate-otp-secret.js",
    "setup-complete": "node scripts/setup-otp.js",
    "test:otp": "npm run test -- --testPathPattern=otp",
    "test:auth": "npm run test -- --testPathPattern=auth",
    "test:security": "npm run test -- --testPathPattern=\"(auth|otp)\"",
    "test:unit": "npm run test -- --testPathPattern=\"\\.spec\\.ts$\"",
    "test:all": "npm run test && npm run test:e2e",
    "docs:security": "echo 'Security documentation available in SECURITY_SETUP_GUIDE.md'",
    "docs:otp": "echo 'OTP integration guide available in README.md#otp-email-verification-system'",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "health:db": "npm run test -- --testPathPattern=\"database.*health\"",
    "health:otp": "npm run test -- --testPathPattern=\"otp.*health\""
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "helmet": "^8.1.0",
    "minio": "^8.0.5",
    "multer": "^2.0.0",
    "mysql2": "^3.14.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.14",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/minio": "^7.1.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "cpx": "^1.5.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.37.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|ts)$": [
        "ts-jest",
        {
          "tsconfig": {
            "strict": false
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/**/*.e2e-spec.ts"
    ],
    "coverageDirectory": "../coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/test/.*\\.e2e-spec\\.ts$"
    ]
  }
}
